<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#1261a0</item>
        <item name="colorPrimaryVariant">#3895d3</item>
        <item name="colorOnPrimary">#000</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.ChatApp" parent="Base.Theme.ChatApp" />

    <style name="CircleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextInputHintStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimary</item> <!-- Focused color -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavActiveIndicator1" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item> <!-- This is the highlighter -->
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

</resources>